<div class="container">
    <div class="jumbotron">
        <img src="assets/img/burger.png" alt="hamburger" width="600" height="310">
        <h1>Eat-Da-Burger!</h1>
    </div>

<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <div class="panel panel-default">
            <ul class="list-group">
                {{#each burger}}
                    {{#unless this.devoured }}
                        <li class="list-group-item">
                            <p>{{this.id}}: {{this.burger_name}}
                                <span class="input-group-btn">
                                    <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
                                        <input type="hidden" name="devoured" value="true">
                                        <button class="btn btn-success" type="submit">DEVOUR</button>
                                    </form>
                                </span>
                            </p>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-md-4 col-md-offset-2">
        <div class="panel panel-default">
            <ul class="list-group">
                {{#each burger}}
                    {{#if this.devoured}}
                        <li class="list-group-item">

                            <p>{{this.id}}:  {{this.burger_name}}</p>

                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="add-burger">
    <form class="new-burger" action="/burgers/add" method = "POST">
        <textarea class="form-control" name="burger_name" placeholder="Enter the name of the burger you want to eat & click the submit button."></textarea>
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>
</div>